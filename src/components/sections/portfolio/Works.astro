---
import works from "../../../data/works.json";
---

<div class="grid grid-cols-2 gap-8 mt-12 px-8 pb-20">
  {works.map(example => (
    <article
      id={example.id}
      class="bg-white rounded-2xl shadow-lg p-4 flex flex-col border-2 border-black transition-all duration-300 hover:scale-102 relative"
    >
      <a href={example.href} target="_blank" rel="noopener noreferrer" class="relative">
        <span
          class={`absolute top-2 right-2 ${example.badgeColor} text-white text-xs font-semibold px-2 py-1 rounded-full shadow`}
        >
          {example.badge}
        </span>
        <img
          src={example.src}
          alt={example.alt}
          class="w-full h-32 sm:h-60 object-cover rounded-xl border border-black mb-4"
        />
        <p class="text-sm">{example.text1}</p>
        <p class="text-sm mt-2">{example.text2}</p>
      </a>
    </article>
  ))}
</div>
